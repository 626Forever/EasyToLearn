<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/panel_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wrong_list_head"
        android:layout_width="fill_parent"
        android:layout_height="55sp"
        android:background="@drawable/bg_header_image"
        android:orientation="horizontal"
        android:paddingBottom="0sp"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingTop="0sp" >

        <Button
            android:id="@+id/wrong_list_back"
            style="@style/header_action_back"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:text="返回" >
        </Button>

        <TextView
            android:id="@+id/wrong_list_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="错题浏览"
            android:textAppearance="@style/header_title" >
        </TextView>

        <Button
            android:id="@+id/wrong_list_add"
            style="@style/header_action_additional"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="12sp"
            android:paddingRight="12sp"
            android:text="添加" >
        </Button>
    </LinearLayout>

    <ListView
        android:id="@+id/wrong_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>