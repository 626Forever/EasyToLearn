<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 正常状态下 -->
    <item android:drawable="@drawable/btn_group_normal" android:state_enabled="true" android:state_focused="false" android:state_pressed="false"/>
    <!-- 可用，按下 -->
    <item android:drawable="@drawable/btn_group_pressed" android:state_enabled="true" android:state_pressed="true"/>
    <!-- 可用，获得焦点 -->
    <item android:drawable="@drawable/btn_group_pressed" android:state_enabled="true" android:state_focused="true" android:state_pressed="false"/>
    <!-- 不可用,获得焦点 -->
    <item android:drawable="@drawable/btn_group_pressed" android:state_enabled="false" android:state_focused="true" android:state_pressed="false"/>
    <!-- 不可用 -->
    <item android:drawable="@drawable/btn_group_pressed" android:state_enabled="false" android:state_focused="false" android:state_pressed="false"/>

</selector>